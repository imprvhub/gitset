</Layout>

<style>
    .main-container {
        min-height: 100vh;
        display: flex;
        margin-top: 6rem;
        flex-direction: column;
        justify-content: space-between;
    }

    @media (max-width: 1023px) {
        .container {
            max-width: 100% !important;
            padding-left: 1rem !important;
            padding-right: 1rem !important;
        }
    }
    
    h3 {
        margin-bottom: 1.5rem;
        font-size: 1.25rem;
        font-weight: 600;
        white-space: nowrap;
        --tw-text-opacity: 1;
        color: rgb(var(--ac-color-700), var(--tw-text-opacity, 1));
    }

    .faq-container {
        margin-bottom: 2rem;
    }

    .faq-item {
        border-bottom: 1px solid #e5e7eb;
    }

    .faq-question {
        width: 100%;
        display: flex;
        align-items: center;
        padding: 1rem 0;
        font-size: 1.125rem;
        font-weight: 500;
        --tw-text-opacity: 1;
        color: rgb(var(--ac-color-700), var(--tw-text-opacity, 1));
        text-align: left;
        cursor: pointer;
        background: none;
        border: none;
        transition: all 0.3s ease;
    }

    .faq-question:hover {
        color: #3DA798;
    }

    .chevron {
        margin-right: 1rem;
        transition: transform 0.3s ease;
    }

    .faq-question[aria-expanded="true"] .chevron {
        transform: rotate(90deg);
    }

    .faq-answer {
        display: none;
        padding: 0 0 1rem 2rem;
        font-size: 1rem;
        --tw-text-opacity: 1;
        color: rgb(var(--ac-color-700), var(--tw-text-opacity, 1));
        line-height: 1.6;
    }

    .faq-answer.active {
        display: block;
    }

    @media (max-width: 1023px) {
        .faq-question {
            font-size: 1rem;
            --tw-text-opacity: 1;
            color: rgb(var(--ac-color-700), var(--tw-text-opacity, 1));
        }
        
        .faq-answer {
            font-size: 0.875rem;
            --tw-text-opacity: 1;
            color: rgb(var(--ac-color-700), var(--tw-text-opacity, 1));
        }
    }

    .top {
        margin-top: 6rem;
    }

    .custom-button {
        background-color: #3a9fa8;
        border-color: #fff;
    }

    .cta-button {
        background-color: #59b4aa;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const questions = document.querySelectorAll('.faq-question');
        
        questions.forEach(question => {
            if (!(question instanceof HTMLElement)) return;
            
            question.addEventListener('click', () => {
                const answer = question.nextElementSibling;
                if (!answer) return;

                const currentState = question.getAttribute('aria-expanded');
                const newState = currentState !== 'true' ? 'true' : 'false';
                
                question.setAttribute('aria-expanded', newState);
                answer.classList.toggle('active');
                
                questions.forEach(otherQuestion => {
                    // Aseguramos que otherQuestion es un HTMLElement
                    if (!(otherQuestion instanceof HTMLElement)) return;
                    if (otherQuestion === question) return;

                    const otherAnswer = otherQuestion.nextElementSibling;
                    if (!otherAnswer) return;

                    otherQuestion.setAttribute('aria-expanded', 'false');
                    otherAnswer.classList.remove('active');
                });
            });
        });
    });
</script>